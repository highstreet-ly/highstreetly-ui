<header class="absolute w-full">
  <div class="container">
    <LinkTo @route="index" class="block md:absolute top-4">
      <span class="sr-only">highstreet.ly</span>
      <img class="h-24 md:h-24" src="{{if this.light '/img/logo-white.svg' '/img/logo-orange.svg'}}" alt="highstreet.ly" title="highstreet.ly">
    </LinkTo>
    <div class="flex flex-wrap flex-row justify-end md:items-end md:space-x-4">
      <nav class="absolute md:relative top-16 left-0 md:top-0 z-20 md:flex flex-col md:flex-row md:space-x-6 font-medium w-full md:w-auto shadow-md rounded-lg md:rounded-none md:shadow-none md:bg-transparent p-6 pt-0 md:p-0 text-right">
        <ul>
          <li class="inline-block"><LinkTo @route="index" class="block py-6 px-6 {{if this.light 'text-white' 'text-brand'}} hover:underline">Home</LinkTo></li>
          <li class="inline-block"><a href="https://blog.highstreet.ly" class="block py-6 px-6 {{if this.light 'text-white' 'text-brand'}} hover:underline">Blog</a></li>
          <li class="inline-block"><LinkTo @route="contact" class="block py-6 px-6 {{if this.light 'text-white' 'text-brand'}} hover:underline">Contact</LinkTo></li>
          <li class="inline-block"><LinkTo @route="register" class="block py-6 px-6 {{if this.light 'text-white' 'text-brand'}} hover:underline">Register</LinkTo></li>
        </ul>
      </nav>
    </div>
  </div>
</header>

{{yield}}